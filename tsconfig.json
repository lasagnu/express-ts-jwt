{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
